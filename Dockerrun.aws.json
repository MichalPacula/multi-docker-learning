{
    "AWSEBDockerrunVersion": 1,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mpac60/multi-client-learning",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "mpac60/multi-server-learning",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "mpac60/multi-worker-learning",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "mpac60/multi-nginx-learning",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}